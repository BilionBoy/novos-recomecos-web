<div class="navbar navbar-expand-xl navbar-dark shadow-sm rounded-3 mx-3 my-2" style="background-color: #5b260d;">
  <div class="container-fluid">
    <!-- Botão para abrir sidebar no mobile -->
    <div class="d-flex d-xl-none me-2">
      <button type="button" class="navbar-toggler sidebar-mobile-main-toggle rounded-circle border-0 p-2 bg-transparent text-white">
        <i class="ph-list fs-4"></i>
      </button>
    </div>
    <!-- Logo -->
    <div class="navbar-brand d-flex align-items-center gap-3 py-0">
      <%= link_to root_path, class: 'd-flex align-items-center text-white text-decoration-none' do %>
        <img src="/layout/assets/img/BannerNavbar.png" alt="Logo" style="height: 40px;">
        <img src="/layout/assets/img/RECOMECOS.png" alt="Adote" style="height: 30px;">
      <% end %>
    </div>
    <!-- Usuário / Logout -->
    <ul class="navbar-nav ms-auto align-items-center">
      <li class="nav-item dropdown nav-item-dropdown-lg position-relative">
        <a href="#" class="nav-link user-menu d-flex align-items-center gap-2 text-white px-3 py-2 rounded bg-dark bg-opacity-25" id="userMenuToggle">
          <span class="d-none d-xl-inline">Olá, <%= current_user&.nome %></span>
        </a>
        <div id="userMenu" class="custom-dropdown-menu">
          <%= button_to '<i class="ph-sign-out me-2"></i>Sair'.html_safe,
              destroy_user_session_path,
              method: :delete,
              class: "btn btn-logout" %>
        </div>
      </li>
    </ul>
  </div>
</div>
<style>
  .user-menu {
  background-color: rgba(33, 37, 41, 0.5); /* tom escuro semi-transparente */
  border-radius: 1.5rem; /* borda mais arredondada */
  padding: 0.4rem 1.2rem; /* espaçamento um pouco menor para ficar mais compacto */
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
  gap: 0.5rem; /* espaço menor entre ícone e texto */
  }

  .user-menu i {
  color: #f8f9fa; /* cor branca suave para o ícone */
  }

  .user-menu:hover {
  background-color: rgba(33, 37, 41, 0.8); /* escurecer ao passar o mouse */
  box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
  text-decoration: none; /* tirar underline no hover */
  }

  .user-menu span {
  font-weight: 600;
  font-size: 1rem;
  color: #f8f9fa;
  }

  .custom-dropdown-menu {
    display: none;
    position: absolute;
    top: 110%;
    right: 0;
    background-color: #fff;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    border-radius: 6px;
    z-index: 1050;
    padding: 0.5rem;
    min-width: 180px;
  }

  .btn-logout {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
    padding: 10px;
    color: #343a40;
    background-color: white;
    border: none;
    border-radius: 5px;
    font-size: 15px;
    transition: background-color 0.2s ease;
  }

  .btn-logout:hover {
    background-color: #f8f9fa;
    text-decoration: none;
    color: #000;
  }

  .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.05);
    text-decoration: none;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const userMenuToggle = document.getElementById('userMenuToggle');
    const userMenu = document.getElementById('userMenu');

    userMenuToggle.addEventListener('click', function (e) {
      e.preventDefault();
      userMenu.style.display = userMenu.style.display === 'block' ? 'none' : 'block';
    });

    document.addEventListener('click', function (e) {
      if (!userMenu.contains(e.target) && !userMenuToggle.contains(e.target)) {
        userMenu.style.display = 'none';
      }
    });
  });
</script>
