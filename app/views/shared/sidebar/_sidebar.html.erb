<div class="sidebar sidebar-light sidebar-main sidebar-expand-xl shadow-sm rounded-3 my-1 mx-3" style="background-color: #e5e5e5;">
  <div class="sidebar-content">
    <!-- Cabeçalho da sidebar -->
    <div class="sidebar-section border-bottom px-3 py-3 d-flex justify-content-between align-items-center">
      <h5 class="mb-0 text-dark fw-semibold">Menu</h5>
      <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill sidebar-mobile-main-toggle d-xl-none">
        <i class="ph-x"></i>
      </button>
    </div>
    <!-- Barra de pesquisa -->
    <!-- Lista de navegação -->
    <ul class="nav flex-column pt-2 px-2" id="sidebar-items">
      <% sidebar_items = [
         { path: root_path,                    icon: 'bi-house-door',          label: 'Home' },
         { path: g_tipo_usuarios_path,        icon: 'bi-people',               label: 'Tipos de Usuários' },
         { path: a_atletas_path,              icon: 'bi-person-lines-fill',   label: 'Atletas' },
         { path: g_estados_path,              icon: 'bi-bar-chart',           label: 'Estados' },
         { path: g_cidades_path,              icon: 'bi-geo-alt',             label: 'Cidades' },
         { path: a_unidade_treinamentos_path, icon: 'bi-building',            label: 'CT de Treinamento' },
         { path: a_zona_treinamentos_path,    icon: 'bi-diagram-3',           label: 'Zona de Treinamento' }
        ] %>
      <% sidebar_items.each do |item| %>
        <% if item[:ability].nil? || can?(*item[:ability]) %>
          <li class="nav-item">
            <%= link_to item[:path],
        class: "nav-link d-flex align-items-center gap-2 px-3 py-2 rounded text-dark sidebar-link #{current_page?(item[:path]) ? 'active-link' : ''}" do %>
              <i class="<%= item[:icon] %> text-dark"></i>
              <span><%= item[:label] %></span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
<style>
  .sidebar-link:hover {
    background-color: #e2e6ea;
    text-decoration: none;
  }

  .active-link {
    border-left: 4px solid #5b260d;
    font-weight: 600;
  }

  .nav-link i {
    font-size: 1.1rem;
  }
</style>
<script>
  function filterSidebar() {
    const input = document.getElementById('sidebar-search-input');
    const filter = input.value.toLowerCase();
    const navItems = document.querySelectorAll('#sidebar-items .nav-item');

    navItems.forEach(item => {
      const text = item.textContent.toLowerCase();
      item.style.display = text.includes(filter) ? '' : 'none';
    });
  }
</script>
