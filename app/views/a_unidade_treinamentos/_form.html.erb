<%= render "shared/context_nav", title: t("activerecord.models.#{AUnidadeTreinamento.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{AUnidadeTreinamento.model_name.i18n_key}.other"), a_unidade_treinamentos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@a_unidade_treinamento) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @a_unidade_treinamento.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{AUnidadeTreinamento.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-7">
          <%= f.input :descricao, input_html: { class: "capitalize"}, placeholder: "Descricao"  %>
        </div>
        <div class="col-5">
          <%= f.association :a_zona_treinamento, collection: AZonaTreinamento.all.order(:descricao), label_method: :descricao,  value_method: :id, input_html: { class: "capitalize" }, prompt: "Selecione uma zona de treinamento" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", a_unidade_treinamentos_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>