<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar A Atleta</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @a_atleta %>">
          <p>
            <strong>Nome:</strong>
            <%= @a_atleta.nome %>
          </p>
          <p>
            <strong>Cpf:</strong>
            <%= @a_atleta.cpf %>
          </p>
          <p>
            <strong>Data Nascimento:</strong>
            <%= @a_atleta.data_nascimento %>
          </p>
          <p>
            <strong>Contato1:</strong>
            <%= @a_atleta.contato1 %>
          </p>
          <p>
            <strong>Contato2:</strong>
            <%= @a_atleta.contato2 %>
          </p>
          <p>
            <strong>Nacionalidade:</strong>
            <%= @a_atleta.nacionalidade %>
          </p>
          <p>
            <strong>Nome Pai:</strong>
            <%= @a_atleta.nome_pai %>
          </p>
          <p>
            <strong>Nome Mae:</strong>
            <%= @a_atleta.nome_mae %>
          </p>
          <p>
            <strong>Responsavel Nome:</strong>
            <%= @a_atleta.responsavel_nome %>
          </p>
          <p>
            <strong>Responsavel Cpf:</strong>
            <%= @a_atleta.responsavel_cpf %>
          </p>
          <p>
            <strong>Responsavel Rg:</strong>
            <%= @a_atleta.responsavel_rg %>
          </p>
          <p>
            <strong>Responsavel Orientacao:</strong>
            <%= @a_atleta.responsavel_orientacao %>
          </p>
          <p>
            <strong>Portador Necessidade:</strong>
            <%= @a_atleta.portador_necessidade %>
          </p>
          <p>
            <strong>Descricao Necessidade:</strong>
            <%= @a_atleta.descricao_necessidade %>
          </p>
          <p>
            <strong>Cep:</strong>
            <%= @a_atleta.cep %>
          </p>
          <p>
            <strong>Rua:</strong>
            <%= @a_atleta.rua %>
          </p>
          <p>
            <strong>Bairro:</strong>
            <%= @a_atleta.bairro %>
          </p>
          <p>
            <strong>Numero:</strong>
            <%= @a_atleta.numero %>
          </p>
          <p>
            <strong>Complemento:</strong>
            <%= @a_atleta.complemento %>
          </p>
          <p>
            <strong>G Estado:</strong>
            <%= @a_atleta.g_estado %>
          </p>
          <p>
            <strong>G Cidade:</strong>
            <%= @a_atleta.g_cidade %>
          </p>
          <p>
            <strong>A Unidade Treinamento:</strong>
            <%= @a_atleta.a_unidade_treinamento %>
          </p>
          <p>
            <strong>A Sexo:</strong>
            <%= @a_atleta.a_sexo %>
          </p>
          <p>
            <strong>Created By:</strong>
            <%= @a_atleta.created_by %>
          </p>
          <p>
            <strong>Updated By:</strong>
            <%= @a_atleta.updated_by %>
          </p>
          <p>
            <strong>Deleted At:</strong>
            <%= @a_atleta.deleted_at %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_a_atleta_path(@a_atleta), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", a_atletas_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @a_atleta, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
