    transition: width 0.4s ease;
    width: 33%;
  }

  .wizard-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px 24px;
    min-height: 0; /* Important for flex child to shrink */
  }

  .form-section {
    margin-bottom: 24px;
  }

