<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Cidade</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_cidade %>">
          <p>
            <strong>Nome Fantasia:</strong>
            <%= @g_cidade.nome_fantasia %>
          </p>
          <p>
            <strong>G Estado:</strong>
            <%= @g_cidade.g_estado %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_cidade_path(@g_cidade), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_cidades_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_cidade, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
