<%= render "shared/context_nav", title: t("activerecord.models.#{GCidade.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GCidade.model_name.i18n_key}.other"), g_cidades_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@g_cidade) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_cidade.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GCidade.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-5">
          <%= f.input :nome_fantasia, input_html: { class: "capitalize"}, placeholder: "Nome fantasia"  %>
        </div>
        <div class="col-7">
          <%= f.association :g_estado, collection: GEstado.all.order(:nome_fantasia), label_method: :nome_fantasia, value_method: :id, input_html: { class: "capitalize" }, prompt: "Selecione um estado" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_cidades_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>