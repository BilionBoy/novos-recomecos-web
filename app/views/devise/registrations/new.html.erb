<div class="container-fluid p-0">
  <div class="row g-0 login-container">
    <!-- Brand Section -->
    <div class="col-lg-5 col-md-6 brand-section">
      <div class="eagle-logo"></div>
      <h1 class="brand-title">NOVOS RECOMEÇOS</h1>
      <p class="brand-subtitle">ÁGUIAS JIU-JITSU</p>
      <p class="brand-tagline">Projeto Social • Treine como um vencedor</p>
    </div>
    <!-- Form Section -->
    <div class="col-lg-7 col-md-6 form-section">
      <div class="floating-elements"></div>
      <div class="form-wrapper">
        <div class="form-header">
          <h3 class="form-title text-center">Registrar</h3>
          <p class="form-subtitle text-center">Entre com suas informações</p>
        </div>
        <% if flash[:alert] %>
          <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <%= flash[:alert] %>
          </div>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: user_registration_path, html: { class: "login-form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <i class="fas fa-user input-icon"></i>
            <%= f.input :nome, autofocus: true, autocomplete: "name", placeholder: "Nome completo", input_html: { class: "form-control"}, label: false %>
          </div>
          <div class="form-group">
            <i class="fas fa-envelope input-icon"></i>
            <%= f.input :email, autocomplete: "email", placeholder: "Email", input_html: { class: "form-control", required: true }, label: false %>
          </div>
          <div class="form-group">
            <i class="fas fa-id-card input-icon"></i>
            <%= f.input :cpf, placeholder: "CPF (somente números)", input_html: { class: "form-control", maxlength: 11, required: true }, label: false %>
          </div>
          <div class="form-group">
            <i class="fas fa-lock input-icon"></i>
            <%= f.input :password, autocomplete: "new-password", placeholder: "Senha", input_html: { class: "form-control", required: true }, label: false %>
          </div>
          <div class="form-group">
            <i class="fas fa-lock input-icon"></i>
            <%= f.input :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar senha", input_html: { class: "form-control", required: true }, label: false %>
          </div>
          <%= f.button :submit, "Criar conta", class: "btn btn-login" %>
        <% end %>
        <div class="register-link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
