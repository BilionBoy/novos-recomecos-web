<div class="container-fluid p-0">
  <div class="row g-0 login-container">
    <!-- Brand Section -->
    <div class="col-lg-5 col-md-6 brand-section">
      <div class="eagle-logo"></div>
      <h1 class="brand-title">NOVOS RECOMEÇOS</h1>
      <p class="brand-subtitle">ÁGUIAS JIU-JITSU</p>
      <p class="brand-tagline">Projeto Social • Treine como um vencedor</p>
    </div>
    <!-- Form Section -->
    <div class="col-lg-7 col-md-6 form-section">
      <div class="floating-elements"></div>
      <div class="form-wrapper">
        <div class="form-header">
          <h3 class="form-title text-center">Bem-vindo de volta!</h2>
          <p class="form-subtitle">Entre com suas credenciais para acessar sua conta</p>
        </div>
        <% if flash[:alert] %>
          <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <%= flash[:alert] %>
          </div>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: user_session_path, html: { class: "login-form" }) do |f| %>
          <div class="form-group">
            <i class="fas fa-envelope input-icon"></i>
            <%= f.input :email, label: false, placeholder: "Digite seu email", input_html: {     class: "form-control",    required: true} %>
          </div>
          <div class="form-group">
            <i class="fas fa-lock input-icon"></i>
            <%= f.input :password, label: false, placeholder: "Digite sua senha", input_html: {     class: "form-control",    required: true} %>
          </div>
          <%= f.submit "Entrar", class: "btn btn-login" %>
        <% end %>
        <div class="register-link">
          <p class="mb-0">Ainda não tem uma conta? 
            <%= link_to "Cadastre-se aqui", new_user_registration_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>